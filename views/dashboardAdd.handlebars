{{!-- Add Post Handlebar Template--}}
<form id="addPost" class="container">  
  <div class="form-group">
  <label for="post-title"><h3>Post Title: </h3></label>
    <input class="form-input" type="text" id="post-title" name="title" placeholder="Enter your post title here (required)" required/>
  </div>
  <div class="form-group">
    <label for="post-content"><h3>Post Content: </h3></label>
    <textarea class="form-input" id="post-content" rows="5" name="content" placeholder="Enter the content of the your post here (required)" required></textarea>
  </div>
  <div class="pt-2 flex-row justify-center">
    <button type="submit" class="btn add-new">ADD POST</button>
  </div>
</form>

{{#if loggedIn}}
  <script src="/js/addPost.js"></script>    
{{/if}}