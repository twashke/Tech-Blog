<div class="container">
    <div class="flex-row justify-center">
      <div class="flex-column d-flex justify-content-around">
    <h2 class="welcome">Welcome {{userPosts.username}}!</h2>
    <hr>
    <button type="submit" class="btn add-new mb-3"><a class="link" href="/dashboard/add">Add New Post!</button></a>
      </div>
    <div class="container" id="user-posts">
          {{#each userPosts.posts}}
        <div class="flex-row justify-center">
        <div class="card w-100 post-info" id="postInfo">
            <div class="card-body pt-2 pl-4 pr-4">
                <h3><a class="card-title link" href="/dashboard/update/{{id}}">{{title}}</a></h3>
                <hr>
                <p class="card-text">{{content}}</p>
                <hr>
          <div class="pt-2 flex-row justify-space-between">
                <button  class="btn"><a class="link" href="/dashboard/update/{{id}}">Update Post</button></a>
                <button type="submit" data-id="{{id}}" class="btn bg-danger text-white" id="delete">Delete Post</button>
          </div>
        </div>
    </div>
    </div>

    {{else}}
      <div class="flex-row justify-center">
        <h3 class="p-2">Add Your First Post!</h3>
      <img src="/images/tech-blog.jpeg" alt="">
      </div>
    </div>
  {{/each}}

  {{#if userPosts.posts}}
    <script src="/js/deletePost.js"></script>  
  {{/if}}


